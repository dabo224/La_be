<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Objets Perdus</title>
    <style>
        body {
            background-color: #f0f2f5;
            margin: 0;
        }
        .lost {
            display: grid;
            grid-template-columns: 1fr minmax(320px, 500px) 1fr;
            gap: 24px;
            padding: 32px 0;
        }
        .section-lost {
            width: 100%;
        }
        .section-lost h1 {
            text-align: center;
            color: #1877f2;
            margin-bottom: 24px;
            font-size: 2em;
            letter-spacing: 1px;
        }
        .losts {
            background-color: #fff;
            padding: 20px 18px 18px 18px;
            margin-bottom: 24px;
            border-radius: 14px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
            min-width: 0;
            transition: box-shadow 0.2s;
        }
        .losts:hover {
            box-shadow: 0 8px 24px rgba(24,119,242,0.13);
        }
        .profil {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 10px;
        }
        .profil img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #1877f2;
        }
        .profil p {
            font-weight: 600;
            color: #222;
            margin: 0;
        }
        .losts > p {
            margin: 10px 0 16px 0;
            color: #444;
            font-size: 1.05em;
        }
        .img {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .img img {
            width: 100%;
            max-height: 260px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #eee;
            background: #f9f9f9;
        }
        .action {
            display: flex;
            gap: 10px;
            margin-top: 8px;
        }
        .action button {
            flex: 1;
            background-color: #1877f2;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 8px 0;
            font-size: 1em;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
        }
        .action button:hover {
            background-color: #145db2;
        }
        @media (max-width: 900px) {
            .lost {
                grid-template-columns: 1fr minmax(0, 600px) 1fr;
                padding: 16px 0;
            }
        }
        @media (max-width: 600px) {
            .lost {
                grid-template-columns: 1fr;
                padding: 8px 0;
            }
            .section-lost {
                padding: 0 4vw;
            }
            .losts {
                padding: 14px 6px 12px 6px;
                margin-bottom: 16px;
            }
            .img img {
                max-height: 180px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/header') %>
    <section class="lost">
        <div></div>
        <div class="section-lost">
            <h1>Evenements</h1>
            <div>

                <% events.forEach(event => { %>
                    <div class="losts">
                        <div class="profil">
                            <img src="/static/profil/<%= event.User.Profil.urlPhoto %>" alt="Photo de profil">
                            <p><%= event.User.prenom + ' ' + event.User.nom %></p>
                        </div>
                        <p><%= event.Description %></p>
                        <div class="img">
                            <img src="/static/images/evenements/<%= event.EventImage.urlPhoto %>" alt="Image de l'événement">
                            <div class="action">
                                <button>Contacter</button>
                                <button>Laisser un avis</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <div></div>
    </section>
</body>
</html>