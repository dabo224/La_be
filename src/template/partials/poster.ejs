            }
        });

        // Validation des formulaires
        function validateForm(formId, contentId, imageId) {
            const content = document.getElementById(contentId).value.trim();
            const image = document.getElementById(imageId).files[0];
            const button = document.querySelector(`#${formId} button[type="submit"]`);
            
            if (content.length > 0 || image) {
                button.disabled = false;
            } else {
                button.disabled = true;
            }
        }

        // Écouteurs pour la validation en temps réel
        document.getElementById('contenu').addEventListener('input', () => validateForm('signup-form', 'contenu', 'image'));
